<mvc:View controllerName="sap.ui.Shop.controller.ProductInfo"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:forms="sap.ui.layout.form">
    <forms:SimpleForm
        editable="true"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="2"
        columnsXL="2"
        adjustLabelSpan="true">

        <!-- Column 1 -->
        <!-- Price -->
        <Label text="{i18n>price}">
            <layoutData>
                <forms:ColumnElementData cellsSmall="4" cellsLarge="1" />
            </layoutData>
        </Label>
        <ObjectNumber
            number="{
                parts: [{path:'ProductList>Price'}],
                formatOptions: {showMeasure: false}}"
            unit="{path:'ProductList>Unit'}"
            state="{=	${ProductList>Quantity} > 0 ? 'Success' : 'Error' }"
            visible="{= !${ProductList>/State/editProduct}}">
        </ObjectNumber>
        <Input
            id="ProductPrice"
            value="{
                path: 'ProductList>Price',
                type: 'sap.ui.model.type.Float',
                formatOptions: {
                    decimals: 0
                },
                constraints: {
                    minimum: 1,
                    maximum: 100000000
                }
            }"
            visible="{ProductList>/State/editProduct}">
        </Input>
        <!-- Unit -->
        <ComboBox
            items="{ProductList>/Unit}"
            selectedKey="{
                path: 'ProductList>Unit',
                type: 'sap.ui.model.type.String',
                constraints: {
                    minLength: 1,
                    maxLength: 255
                }
            }"
            visible="{ProductList>/State/editProduct}" >
            <core:Item
                key="{ProductList>unit}"
                text="{ProductList>unit}" />
        </ComboBox>
        <!-- Quantity -->
        <Label text="{i18n>quantity}">
            <layoutData>
                <forms:ColumnElementData cellsSmall="4" cellsLarge="1" />
            </layoutData>
        </Label>
        <ObjectNumber
            number="{
                parts:[{path:'ProductList>Quantity'}],
                formatOptions: {showMeasure: false}}"
            state="{=	${ProductList>Quantity} > 0 ? 'Success' : 'Error' }"
            visible="{= !${ProductList>/State/editProduct}}"/>
        <Input
            id="ProductQuantity"
            value="{
                path: 'ProductList>Quantity',
                type: 'sap.ui.model.type.Float',
                formatOptions: {
                    decimals: 0
                },
                constraints: {
                    minimum: 1,
                    maximum: 100000000
                }
            }"
            visible="{ProductList>/State/editProduct}"/>

        <!-- Column 2 -->
        <!-- Manufacture -->
        <Label text="{i18n>manufacture}">
            <layoutData>
                <forms:ColumnElementData cellsSmall="4" cellsLarge="1" />
            </layoutData>
        </Label>
        <Text
            text="{ProductList>Manufacture}"
            visible="{= !${ProductList>/State/editProduct}}"/>
        <ComboBox
            items="{ProductList>/Manufacture}"
            selectedKey="{
                path: 'ProductList>Manufacture',
                type: 'sap.ui.model.type.String',
                constraints: {
                    minLength: 1,
                    maxLength: 255
                }
            }"
            visible="{ProductList>/State/editProduct}" >
            <core:Item
                key="{ProductList>manufacture}"
                text="{ProductList>manufacture}" />
        </ComboBox>
        <!-- CreationDate -->
        <Label text="{i18n>productTitleDate}">
            <layoutData>
                <forms:ColumnElementData cellsSmall="4" cellsLarge="4" />
            </layoutData>
        </Label>
        <Text text="{
                    path: 'ProductList>CreationDate',
                    type: 'sap.ui.model.type.Date',
                    formatOptions: {
                        source: {
                            pattern: 'yyyy-MM-ddTHH:mm:ss'
                        }
                    }
                }"
                visible="{= !${ProductList>/State/editProduct}}"
        />
        <DatePicker
            id="ProductDate"
            value="{
                    path: 'ProductList>CreationDate',
                    type: 'sap.ui.model.type.Date',
                    formatOptions: {
                        source: {
                            pattern: 'yyyy-MM-ddTHH:mm:ss'
                        }
                    }
                }"
            visible="{ProductList>/State/editProduct}" />
    </forms:SimpleForm>
</mvc:View>