<mvc:View controllerName="sap.ui.Shop.controller.SupplierInfo"
	displayBlock="true"
	height="100%"
	xmlns:f="sap.f"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<f:FlexibleColumnLayout
		id="SupplierInfoLayout"
		backgroundDesign="Solid">
		<!-- Products -->
		<f:beginColumnPages>
			<core:Fragment
				fragmentName="sap.ui.Shop.view.fragments.SupplierProductList"
				type="XML"/>
		</f:beginColumnPages>
		<!-- Product Info -->
		<f:midColumnPages>
			<core:Fragment
				fragmentName="sap.ui.Shop.view.fragments.SupplierProductInfo"
				type="XML"/>
		</f:midColumnPages>
		<!-- Product Supplies -->
		<f:endColumnPages>
			<core:Fragment
				fragmentName="sap.ui.Shop.view.fragments.SupplierProductSupplies"
				type="XML"/>
		</f:endColumnPages>

	</f:FlexibleColumnLayout>
</mvc:View>