<mvc:View controllerName="sap.ui.Shop.controller.SupplierInfo"
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:f="sap.f">
	<f:DynamicPage>
		<!-- Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title
						class="sapUiSmallMarginBegin"
						text="{ProductList>supplierName}" />
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<!-- Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<f:content>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<!-- Content -->
		<f:content>
            <List
                items="{ProductList>products}"
                headerText="{i18n>productListTitle}">
                <ObjectListItem
                    press="onProductPress"
                    type="Active"
                    title="{ProductList>productName}"
                    number="{ProductList>productPrice}"
                    numberUnit="{ProductList>productUnit}"
                    numberState="Success" >
                </ObjectListItem>
            </List>
		</f:content>
		<!-- Footer -->
		<f:footer>
			<OverflowToolbar>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>