<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.uxap"
	xmlns:f="sap.f"
	xmlns:m="sap.m">
	<ObjectPageLayout
		id="SupplierProductInfo"
		showTitleInHeaderContent="true"
		showEditHeaderButton="true"
		upperCaseAnchorBar="false"
		editHeaderButtonPress="handleEditBtnPress">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<!-- Title -->
				<heading>
					<m:FlexBox
						fitContainer="true"
						alignItems="Center">
						<f:Avatar
							src="{ProductList>productImage}"
							class="sapUiTinyMarginEnd"/>
							<!-- Name -->
						<m:Title
							text="{ProductList>productName}"
							wrapping="true" />
					</m:FlexBox>
				</heading>

				<navigationActions>
					<m:OverflowToolbarButton visible="{ProductList>/State/middleColumn}" type="Transparent" icon="sap-icon://full-screen" press=".onOpenFullScreenMiddleColumn"/>
					<m:OverflowToolbarButton visible="{= !${ProductList>/State/middleColumn}}" type="Transparent" icon="sap-icon://exit-full-screen" press=".onOpenMiddleColumn"/>
					<m:OverflowToolbarButton visible="true" type="Transparent" icon="sap-icon://decline" press=".onCloseMiddleColumn"/>
				</navigationActions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<headerContent>
		</headerContent>

		<!-- Content -->
		<sections>
			<ObjectPageSection
				titleUppercase="false"
				title="{i18n>productTitleAboutProduct}">
				<subSections>
					<ObjectPageSubSection title="About Product">
						<m:Text text="{ProductList>productInfo}" />
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection
				titleUppercase="false"
				showTitle="false"
				title="{i18n>productTitleSuppliers}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
						<m:Table
							items="{ProductList>products}"
							class="sapUiResponsiveMargin"
							width="auto">
							<!-- Product List Title -->
							<m:headerToolbar>
								<m:OverflowToolbar design="Solid">
									<!-- Title -->
									<m:Title
										class="sapUiSmallMarginBegin"
										text="{i18n>productListTitle}" />
									<!-- Spacer -->
									<m:ToolbarSpacer />
									<!-- Edit Buttons -->
								</m:OverflowToolbar>
							</m:headerToolbar>
							<!-- Product List Header -->
							<m:columns>
								<m:Column>
									<m:HBox
										alignItems="Center"
										justifyContent="Center">
										<m:Label
											text="{i18n>name}"
											design="Bold" />
									</m:HBox>
								</m:Column>
							</m:columns>
							<!-- Product List -->
							<m:items>
								<m:ColumnListItem
									type="Navigation"
									press="onProductPress">
									<m:VBox>
										<m:ObjectIdentifier title="{ProductList>productName}"/>
									</m:VBox>
								</m:ColumnListItem>
							</m:items>
						</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

		<footer>
		</footer>
	</ObjectPageLayout>
</core:FragmentDefinition>